<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/paddingBetwenCardsView"

    android:background="@color/colorWhite"
    >

    <LinearLayout
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="120dp"

        android:baselineAligned="false"

        android:background="@color/colorWhite"
        >
        <LinearLayout

            android:orientation="vertical"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/marinListItemLeft"
            android:layout_marginRight="@dimen/marinListItemRight"
            android:layout_marginTop="@dimen/marinListItemTop"
            android:layout_marginBottom="@dimen/marinListItemBottom"

            android:layout_weight="2"

            android:background="@color/colorWhite"
            >

            <TextView
                android:id="@+id/tvCategoria"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Prato Principal"

                android:textSize="@dimen/textItenListSize"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:id="@+id/tvDescricao"

                android:paddingTop="@dimen/paddingListItemTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Adorei a comida e o atendimento estava 10"

                android:textSize="@dimen/textItenListSize"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:id="@+id/tvDataContatenadoAvaliacao"

                android:paddingTop="@dimen/marinListItemTopDataEAvaliacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Avaliado com 3 estrelas em 21/11/2016"

                android:textSize="14dp"
                android:textColor="@color/colorBlack"

                android:layout_weight="1.25" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/marinListItemLeft"
            android:layout_marginRight="@dimen/marinListItemRight"
            android:layout_marginTop="@dimen/marinListItemTop"
            android:layout_marginBottom="@dimen/marinListItemBottom"

            android:layout_weight="1"


            android:weightSum="1">

            <ImageView
                android:id="@+id/ivFoodPicture"

                android:layout_width="match_parent"
                android:layout_height="97dp"

                android:src="@drawable/image_logo" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>